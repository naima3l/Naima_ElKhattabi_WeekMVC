@model List<DishViewModel>

<h1>Ecco la lista dei piatti</h1>
@if (User.IsInRole("Restaurateur"))
{
    <a class="btn btn-primary" asp-controller="Dish" asp-action="Create" type="button">Inserisci Nuovo Piatto</a>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Type</th>
            <th scope="col">Price</th>
            <th scope="col">Menu</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Type</td>
                <td>@item.Price</td>
                <td>@item.Menu.Name</td>
                <td>
                    @if (User.IsInRole("Restaurateur"))
                    {
                        <a asp-controller="Dish" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Modifica</a>
                        <a asp-controller="Dish" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Elimina</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>