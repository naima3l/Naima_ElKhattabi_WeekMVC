@model MenuViewModel

<h1>Ecco i dettagli del menu @Model.Name : </h1>

<p>Di seguito l'elenco dei piatti di questo menu : </p>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Type</th>
            <th scope="col">Price</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Dishes)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Type</td>
                <td>@item.Price</td>
                <td>
                    <a asp-controller="Dish" asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary">Visualizza dettagli piatto</a>
                    <a asp-controller="Dish" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Modifica</a>
                    <a asp-controller="Dish" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Elimina</a>
                </td>
            </tr>
        }
    </tbody>
</table>